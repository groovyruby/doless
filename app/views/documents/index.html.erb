<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", project_documents_path(@project)  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_document_path(@project) %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Documents</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.document.title", :default => t("activerecord.labels.title", :default => "Title")) %>
          </th>
                    <th><%= t("web-app-theme.updated_at", :default => "Updated at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @documents.each do |document| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= document.id %>
          </td>
                    <td>
            <%= link_to document.title, document_path(document) %>
          </td>
                    <td>
            <%= document.updated_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", project_document_path(@project, document) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_project_document_path(@project, document) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", project_document_path(@project, document), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
