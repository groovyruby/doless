<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", updates_path(@project)  %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Updates</h2>
    <%= render :partial=>"form" %>
    <div class="inner">
      <ul class="list">
        <% for update in @updates %>
        <li>
          <div class="left">
            Ava
          </div>
          <div class="item">
            <p>
              <%= auto_link(update.body, :html => { :target => '_blank' }) { |text| truncate(text, :length => 50) } %>
            </p>
              <small>Utworzono: <%= update.created_at %></small>
            
          </div>
        </li>
        <% end %>
      </ul>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

