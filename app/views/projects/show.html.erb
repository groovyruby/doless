<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to @project.name, @project %></li>
			<% if @project.managers.member?(current_user)%>
				<% if @project.admins.member?(current_user)%>
					<li style="float: right;"><%= link_to t("web-app-theme.delete", :default=> "Delete"), project_path(@project), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %></li>
				<% end %>
				<li style="float: right;"><%= link_to t("web-app-theme.edit", :default=> "Edit"), edit_project_path(@project)%></li>
			<% end %>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.project.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @project.name %>
        </p>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'show_sidebar') -%>