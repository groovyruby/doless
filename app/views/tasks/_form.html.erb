<%= form_for [@task], :url=>tasks_path(:project_id=>@project.to_param), :html => { :class => :form } do |f| -%>

  <div class="group">
    <%= f.label :title, t("activerecord.attributes.task.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.task.title", :default => "") %></span>
  </div>
        
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
    </button>
    <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), tasks_path, :class => "text_button_padding link_button" %>
  </div>
<% end -%>