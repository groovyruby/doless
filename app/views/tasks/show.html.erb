<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", tasks_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_task_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", task_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.task.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @task.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.task.project_id", :default => t("activerecord.labels.project_id", :default => "Project")) %>:</b>
          <%= @task.project_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.task.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @task.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.task.is_starred", :default => t("activerecord.labels.is_starred", :default => "Is starred")) %>:</b>
          <%= @task.is_starred %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_task_path(@task), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), task_path(@task), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>