<%= form_for [@project, @topic], :html => { :class => :form } do |f| -%>

  <div class="group">
    <%= f.label :title, t("activerecord.attributes.topic.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description"><% t("web-app-theme.descriptions.topic.title", :default => "") %></span>
  </div>
  <% if f.object.new_record? %>
    <%= f.fields_for :posts do |fp| %>
      <div class="group">
        <%= fp.label :body, t("activerecord.attributes.post.body", :default => "Body"), :class => :label %>
		    <%= fp.text_area :body, :size=>"60x5", :class=>"text_area" %>
      </div>
    <% end %>
  <% end %>
        
  <div class="group navform wat-cf">
    <button class="button" type="submit">
      <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
    </button>
    <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), project_topics_path(@project), :class => "text_button_padding link_button" %>
  </div>
<% end -%>